<section class="TodoSection">
    <div class="TodoSection-title">
    <p class="TodoSection-title-text"><%= section_title %></p>
    <p class="TodoSection-title-remainingCount"><%=todos.completed.count%>/<%= todos.count %></p>
    </div>
    <ul class="TodoSection-list">
    <% todos.each do |todo| %>
        <% if !todo.completed || section_title != "Overdue" %>
            <li class="TodoItem">
            <div class="TodoItem-container">
                <% if todo.completed %>
                    <input class="TodoItem-checkbox" type="checkbox" checked>
                    <p class="TodoItem-todo" style="text-decoration: line-through;"><%= todo.todo_text %></p>
                <% else %>
                    <input class="TodoItem-checkbox" type="checkbox">
                    <p class="TodoItem-todo"><%= todo.todo_text %></p>
                <% end %>
                
                <% if show_due_date %>
                    <p class="TodoItem-duedate"><%= todo.due_date.strftime("%d %b") %></p>
                <%end%>
                <a class="TodoItem-delete" href="javascript:void(0)"><img src="delete.png"></a>
            </div>
            </li>
        <% end%>
    <% end %>
    </ul>
</section>
